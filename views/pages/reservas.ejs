<div class="row">
  <div class="col-md-12">

    <% flash.get('mensaje').forEach(function (msg) { %>
    <div class="alert alert-info text-center" role="alert">
      <%=msg%>
    </div>
    <% }) %>

    <h2>Mis Reservas</h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Pedido</th>
          <th scope="col">Tiempo</th>
        </tr>
      </thead>
      <tbody>
          <% reservas.forEach( reserva => { %>
            <tr>
            <td scope="row"><a href="/mis-reservas/<%=reserva.id%>"><%=reserva.id%></a></td>
            <td scope="row"><%=reservas.pedido%></td>
            <td scope="row"><%=reservas.tiempo%></td>
          </tr>
          <% }) %>
        </tbody>
    </table>

  </div>
</div>
