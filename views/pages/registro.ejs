<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2 class="text-center">Registro</h2>
  
      <% flash.get('mensaje').forEach(function (msg) { %>
      <div class="alert alert-danger" role="alert">
        <%=msg%>
      </div>
      <% }) %>
  
      <form class="needs-validation" action="/procesar-registro" method="post" novalidate>
        <div class="form-group">
          <label for="nombre">Alias</label>
          <input type="text" class="form-control" id="alias" name="alias" placeholder="Ingrese su alias..." required>
          <div class="invalid-feedback">
            Revise su ALIAS!!!
          </div>
        </div>
        <div class="form-group">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese su nombre..." required>
          <div class="invalid-feedback">
            Revise su NOMBRE!!!
          </div>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su email..." required>
          <div class="invalid-feedback">
            Revise su EMAIL!!!
          </div>
        </div>
        <div class="form-group">
          <label for="contrasena">Contraseña</label>
          <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Ingrese su Contraseña..." required>
          <div class="invalid-feedback">
            Revise su CONTRASENA!!!
          </div>
          </div>
      <div class="row justify-content-center">
          <div class="col-md-3">
            <button type="submit" class="btn btn-success text-secundary">Guardar</button>
          </div>
          <!-- <div class="col-6">
            <button class="btn btn-primary " href="/">Cancelar</button>
          </div> -->
        </div>
      </form>
    </div>
  </div>
  
  <script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
  </script>