<div class="row">
  <div class="col-md-12 text-center">

    <% flash.get('mensaje').forEach(function (msg) { %>
      <div class="alert alert-info text-center" role="alert">
        <%=msg%>
      </div>
      <% }) %>

        <h2>Reservar</h2>

        <div class="col-md-12 border-top mt-2 p-1 border-success"></div>

        <form action="/procesar-reserva" method="post">

          <div class="form-group row">
            <div class="col-md-3">
              <label for="fecha">Fecha</label>
              <input type="date" class="form-control" id="fecha" name="fecha" step="1" required><br>
              <label for="hora">Hora</label>
              <input type="time" class="form-control" id="hora" name="hora" step="1" autocomplete=”on”
                autofocus=”autofocus” required>
            </div>
            <div class="col-md-3">
              <label for="pedido">Pedido</label>
              <input type="text" class="form-control" id="pedido" name="pedido" step="1" autocomplete=”on”
                autofocus=”autofocus” required>
            </div>
            <div class="col-md-3">
              <label for="recurso">Recurso</label>
              <select class="form-control" data-rel="chosen" id="recurso" name="recurso">
                <option>1</option>
                <option>2</option>
              </select>
            </div>
            <div class="col-md-3">
              <label for="nro">Nro</label>
              <input type="number" class="form-control" id="nro" name="nro" step="1" autocomplete=”on”
                autofocus=”autofocus” required>
            </div>
          </div>

          <div class="row justify-content-center">
            <div class="col-md-12">
              <button type="submit" class="btn btn-success text-secundary">Guardar</button>
            </div>
          </div>

        </form>
  </div>
</div>