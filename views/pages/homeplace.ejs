<div class="row">
  <div class="col-md-12">

    <% flash.get('mensaje').forEach(function (msg) { %>
      <div class="alert alert-info text-center" role="alert">
        <%=msg%>
      </div>
      <% }) %>
        <div class="container">
          <div class="row">
            <div class="col-12 text-center">
              <h2>Mis reservas</h2>
            </div>
            <div class="col-md-12 my-2 bg-success ">
              <table class="table">
                <tbody>
                  <% reservas.forEach( reserva=> { %>
                      <tr>
                        <td>
                          <div class="col-md-4 my-2">
                            <div class="card">
                              <h5 class="card-header bg-info text-white text-center">
                                <%=reserva.nombre%> Nro.<%=reserva.identificador%><br>
                              </h5>
                              <div class="card-body">
                                <p class="card-text">
                                  ID: <%=reserva.id%><br>
                                  Fecha: <%=reserva.fecha%><br>
                                  Pedido: <%=reserva.pedido%><br>
                                  Tiempo solicitado: <%=reserva.tiempo%> Hora(s)<br>
                                </p>
                                <h5 class="card-footer bg-info text-white text-center">
                                  Aforo permitido: <%=reserva.aforo%><br>
                                </h5>
                            </div>
                          </div>
                        </td>
                      </tr>
                    </div>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
  </div>
</div>